@page
@model StudentInfoApp.Pages.Students.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>刪除學生</h1>

<form method="post">
    <div class="form-group">
        <h4>您確定要刪除這位學生嗎？</h4>
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Student.Name"></label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Student.Name" class="form-control" readonly />
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Student.Class"></label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Student.Class" class="form-control" readonly />
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Student.SeatNumber"></label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Student.SeatNumber" class="form-control" readonly />
            </dd>
        </dl>
        <input type="hidden" asp-for="Student.Id" />
        <button type="submit" class="btn btn-danger">刪除</button>
        <a asp-page="./Index" class="btn btn-secondary">取消</a>
    </div>
</form>
