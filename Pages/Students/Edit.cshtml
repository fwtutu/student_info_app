@page "{id:int}"
@model StudentInfoApp.Pages.Students.EditModel

<h1>編輯學生資料</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Student.Name"></label>
        <input asp-for="Student.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Student.Class"></label>
        <input asp-for="Student.Class" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Student.SeatNumber"></label>
        <input asp-for="Student.SeatNumber" class="form-control" />
    </div>
    <input type="hidden" asp-for="Student.Id" />
    <button type="submit" class="btn btn-primary">保存變更</button>
    <a asp-page="./Index" class="btn btn-secondary">取消</a>
</form>
